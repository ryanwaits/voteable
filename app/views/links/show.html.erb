<div class="main-container">
  <div class="link">
      <div class="header-meta">
        <span style="margin-right: 1%;"><img class="profile" src="https://cdn-images-1.medium.com/fit/c/32/32/0*L7WQbejWZTmPdX6Q.jpeg" alt=""></span>
        <h1><%= link_to @link.title, link_path(@link) %></h1>
      </div>
      <p>posted by <%= @link.user.username %> about <%= time_ago_in_words(@link.created_at) %></p>
      <div class="action-meta">
        <span>
          <i class="fa fa-arrow-circle-o-up" aria-hidden="true"></i><%= link_to 'Upvote', like_link_path(@link), method: :put %>
          <span class="count">(<%= @link.get_upvotes.size %>)</span>
        </span>
        <span>
          <i class="fa fa-arrow-circle-o-down" aria-hidden="true"></i><%= link_to 'Downvote', dislike_link_path(@link), method: :put %>
          <span class="count">(<%= @link.get_downvotes.size %>)</span>
        </span>
      </div>
      <div class="comments">
        <h4><%= link_to "Comments ( #{@link.comments.count} )", link_path(@link) %></h4>
      </div>
    </div>
    <%= render partial: @link.comments %>
    <div class="comment-field">
      <%= simple_form_for [@link, Comment.new] do |f| %>
      <%= f.text_area :body, placeholder: 'Remember, be nice!', cols: '40', rows: '5' %>
    </div>
      <%= f.submit 'Send' %>
      <% end %>

</div>